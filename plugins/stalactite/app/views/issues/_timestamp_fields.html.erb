<%= stylesheet_link_tag "stalactite.css", :plugin => 'stalactite' %>
<%= javascript_include_tag "jquery-1.8.3.js", :plugin => 'stalactite' %>
<%= javascript_include_tag "jquery-ui-1.9.2.custom.min.js", :plugin => 'stalactite' %>
